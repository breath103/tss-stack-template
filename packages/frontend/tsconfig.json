{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/backend/*": ["../backend/src/*"],
      "@app/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src", "scripts", "../../tss.json"]
}
