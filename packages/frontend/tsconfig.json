{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "..",
    "paths": {
      "@/*": ["src/*"],
      "@backend/*": ["../backend/dist/*"]
    }
  },
  "include": ["src"]
}
