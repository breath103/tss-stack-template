{
  "name": "tss-stack-template",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "tsx scripts/setup.ts",
    "dev": "tsx scripts/dev.ts",
    "deploy:bootstrap": "npm run bootstrap -w @app/edge --",
    "deploy:edge": "npm run deploy -w @app/edge --",
    "deploy:backend": "npm run deploy -w @app/backend --",
    "deploy:frontend": "npm run deploy -w @app/frontend --",
    "destroy:backend": "npm run destroy -w @app/backend --",
    "destroy:frontend": "npm run destroy -w @app/frontend --",
    "lint": "npm run lint -w @app/backend && npm run lint -w @app/frontend",
    "build:types": "npm run build:types -w @app/backend && npm run build:types -w @app/frontend",
    "test": "npm test -w @app/shared"
  },
  "devDependencies": {
    "@aws-sdk/client-route-53": "^3.700.0",
    "rxjs": "^7.8.2",
    "tsx": "^4.21.0"
  }
}
