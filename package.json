{
  "name": "tss-stack-template",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "tsx scripts/setup.ts",
    "dev": "concurrently -n backend,frontend -c blue,green \"npm run dev -w @app/backend\" \"npm run dev -w @app/frontend\"",
    "deploy:backend": "npm run deploy -w @app/backend --",
    "deploy:edge": "npm run deploy -w @app/edge",
    "deploy:frontend": "npm run deploy -w @app/frontend --",
    "bootstrap": "npm run bootstrap -w @app/edge --"
  },
  "devDependencies": {
    "@aws-sdk/client-route-53": "^3.700.0",
    "concurrently": "^9.0.0",
    "tsx": "^4.21.0"
  }
}
